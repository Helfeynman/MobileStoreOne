@model MobileStoreOne.Models.Phone
@{
    ViewData["Title"] = "AddNew";
}
<h2>Добавить товар</h2>

<form asp-action="addnew" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Модель</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Company" class="control-label">Производитель</label>
        <input type="text" asp-for="Company" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>